<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"> Sign in <i class="fa-solid fa-clipboard-list"></i></h1>
            <%- include('partials/messages.ejs') %>
            <form action="/users/login" method="POST">            
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <div>
                <div class="section">
                    <a href="/auth/google" class="btn" style="background-color: forestgreen;">
                        <i class="fab fa-google left"></i> 
                        Log In With Google
                    </a>
                </div>
            </div>
            <p class="lead mt-4">Oh you don't have an account? whoops.. <a href="/users/register">Register Here</a></p>
        </div>
    </div>
</div>
